<?xml version="1.0"?>
<config>
    <sections>
        <ewmg_checkout>
            <label><![CDATA[EWMG Checkout]]></label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <postcode_anywhere>
                    <label>Postcode Anywhere</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <lookup_key translate="label">
                            <label>Lookup Key</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lookup_key>
                        <find_endpoint>
                            <label>Find Endpoint</label>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </find_endpoint>
                        <retrieve_endpoint>
                            <label>Retrieve Endpoint</label>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </retrieve_endpoint>
                        <geocode_key translate="label">
                            <label>Geocode Key</label>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </geocode_key>
                        <geocode_country>
                            <label>Geocode Preferred Country</label>
                            <comment>This is used for Click and Collect search only, so should be GB</comment>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </geocode_country>
                        <geocode_endpoint>
                            <label>Geocode Endpoint</label>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </geocode_endpoint>
                    </fields>
                </postcode_anywhere>
                <ab_testing>
                    <label>AB Testing</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <experiment_id>
                            <label>Experiment ID</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </experiment_id>
                        <percentage_to_new_checkout>
                            <label>Percentage to send to new checkout</label>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Integer, 0 - 100. Set this as 0 to disable the new checkout completely</comment>
                        </percentage_to_new_checkout>
                    </fields>
                </ab_testing>
            </groups>
        </ewmg_checkout>
    </sections>
</config>

